{
  "name": "activity-tracker-desktop",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/activity-tracker-desktop/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build-all": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/activity-tracker-desktop",
        "commands": [
          {
            "command": "pnpm tauri build",
            "forwardAllArgs": false
          }
        ],
        "colors": true,
        "parallel": false
      },
      "configurations": {
        "production": {}
      }
    },
    "build-front": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/activity-tracker-desktop",
        "assets": [
          {
            "glob": "/*",
            "input": "./public/**",
            "output": "./"
          }
        ],
        "tsConfig": "apps/activity-tracker-desktop/tsconfig.app.json"
      },
      "configurations": {
        "production": {}
      }
    },
    "serve-front": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "activity-tracker-desktop:build-front"
      },
      "configurations": {
        "development": {
          "buildTarget": "activity-tracker-desktop:build-front:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "activity-tracker-desktop:build-front:production",
          "hmr": false
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tauri dev",
        "cwd": "apps/activity-tracker-desktop",
        "color": true
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm nx run activity-tracker-desktop:eslint",
            "forwardAllArgs": false
          },
          {
            "command": "pnpm nx run activity-tracker-desktop:check",
            "forwardAllArgs": false
          }
        ],
        "colors": true
      }
    },
    "eslint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/activity-tracker-desktop/**/*.{ts,svelte,spec.ts}"
        ]
      }
    },
    "check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "svelte-check --tsconfig ./tsconfig.app.json",
        "cwd": "apps/activity-tracker-desktop"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/apps/activity-tracker-desktop"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/activity-tracker-desktop",
        "config": "vitest.config.ts"
      }
    }
  },
  "namedInputs": {
    "projectSpecificFiles": ["{workspaceRoot}/cargo.toml"]
  }
}
